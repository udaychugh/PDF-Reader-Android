<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/title_bg"
        android:id="@+id/titleBar">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:src="@drawable/title"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_bg"
        android:layout_below="@id/titleBar"
        android:padding="20dp"
        android:gravity="center">

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device"
            android:background="@drawable/button_ui"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/buttonStorage"/>

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/internet"
            android:background="@drawable/button_ui"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/buttonInternet"
            android:layout_below="@id/buttonStorage"
            android:layout_marginTop="30dp"/>

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/documentation"
            android:background="@drawable/button_ui"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/buttonAssests"
            android:layout_below="@id/buttonInternet"
            android:layout_marginTop="30dp"/>


    </RelativeLayout>



</RelativeLayout>